<div class="admin-title">
  <h2>Posts</h2>
  <a href="/admin/posts/new" class="btn btn-primary">+ New Post</a>
</div>

<ul class="admin-post">
  <% posts.forEach( post=> { %>
    <li>
      <a href="/admin/posts/<%= post._id %>">
        <h3>
          <%= post.title %> &nearr;
        </h3>
      </a>
      <p>
        <%= post.body %>
      </p>
      <p>
        <%= post.createAt %>
      </p>
      <div class="admin-post-controls">
        <a href="/admin/posts/<%= post._id %>/edit" class="btn btn-primary">Edit</a>
        <form action="/admin/delete-post/<%= post._id %>?_method=delete" method="POST" style="display: inline;">
          <input type="submit" value="Delete" class="btn btn-danger">
        </form>
      </div>
    </li>
    <% }); %>
</ul>