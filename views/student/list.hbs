<h3 class="btn bn-secondary" href="/student">Create New</a></h3>
<table class="table table-striped table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{ #each list }}
    <tr>
      <td>{{ this.name }}</td>
      <td>{{ this.age }} </td>
      <td>
        <a class="btn btn-primary" href="/student/{{ this.id }}">View</a>
        <a class="btn btn-warning" href="/student/{{ this.id }}/edit">Edit</a>
        <a class="btn btn-danger" href="/student/delete/{{ this.id }}"
          onclick="return confirm('Are you sure you want to delete this recordd')">Delete</a>
      </td>
    </tr>
    {{ /each }}
  </tbody>
</table>